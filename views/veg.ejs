<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <title>Prep Ingredients</title>
</head>
<body>
    <div class="row row-cols-1 row-cols-md-6 g-4">
        <% if (locals.vegs) { var veg_lst = Object.keys(vegs); for (var i = 0; i < veg_lst.length; i++) { var veg_item = veg_lst[i]; const [item_in_mandarin, item_in_german] = veg_item.split(' ');%>
            <div class="col">
                <%# click the button; pass the ingredient name thru POST action%>
                <div id="<%=item_in_mandarin%>" class="card h-100">
                    <div id="cover">        
                        <img src="https://dcf196gsozjg8.cloudfront.net/<%= item_in_mandarin %>.jpg" class="card-img-top" alt="<%= item_in_german%>">
                    </div>
                    <div class="card-body">
                        <h6 class="card-title" style="font-style: italic;"><%= item_in_mandarin %></h6>
                        <h6 class="card-title" style="font-style: italic;"><%= item_in_german %></h6>
                    </div>
                </div>
            </div>
            <script>
                var urgency = "<%=vegs[veg_item]%>";
                if (urgency === "true"){
                    document.getElementById("<%=item_in_mandarin%>").style.backgroundColor = "#ffc107";
                }
            </script>
            <% } }%>
    </div>

    <script>
        // Preload the audio and gain autoplay permission
        const notificationAudio = new Audio('/audio/notification.mp3'); // Update the path if needed
        
        notificationAudio.muted = true; // Start muted
        notificationAudio.play().then(() => {
                notificationAudio.muted = false; // Unmute for later use
                console.log('Audio autoplay permission granted');
            }).catch((error) => {
                console.error('Autoplay permission denied:', error);
            });
    
        //Request notification permission
        if ('Notification' in window && Notification.permission !== 'granted') {
            Notification.requestPermission().then((permission) => {
                if (permission === 'granted') {
                    console.log('Notification permission granted');
                } else {
                    console.log('Notification permission denied');
                }
            });
        }
    
        const socket = new WebSocket('ws://localhost:3000'); // Update with your WebSocket URL
    
        window.addEventListener('beforeunload', () => {
            socket.close(); // Explicitly close the WebSocket connection
        });
    
        let isPageLoaded = false;
    
        document.addEventListener('DOMContentLoaded', () => {
            isPageLoaded = true;
        });
        // Handle incoming WebSocket messages
        socket.onmessage = (event) => {
            const data = JSON.parse(event.data);
    
            if (isPageLoaded && data.page === 'veg') {
                if (data.action === 'add') {
                    console.log('Meat added, sound will be played');
                    notificationAudio.play().catch(error => console.error('Error playing sound:', error));
                } else {
                    console.log('Meat removed, no sound will be played');
                }
                // Refresh the page
                location.reload();
            }
        };
    
        socket.onerror = (error) => {
            console.error('WebSocket error:', error);
        };
    </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>