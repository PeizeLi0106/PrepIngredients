<%-include("partials/header.ejs")%>

    <body>
        <div class="container">
            <div class="content-left">
                <div class="row row-cols-1 row-cols-md-4 g-0">
                    <% if (locals.remain && locals.req) { for (var i = 0; i < remain.length; i++) { var remain_ingre = remain[i]; const [item_in_mandarin, item_in_german] = remain_ingre.split(" ");%>
                        <div class="col">
                            <div class="card h-100">
                                <div id="cover">
                                    <img src="https://dcf196gsozjg8.cloudfront.net/<%= item_in_mandarin %>.jpg" class="card-img-top" alt="<%= item_in_german%>">
                                </div>
                                <div class="card-body">
                                    <h6 class="card-title" style="font-style: italic;"><%= item_in_mandarin %></h6>
                                    <h6 class="card-title" style="font-style: italic;"><%= item_in_german %></h6>
                                    <form action="/remain/<%= remain_ingre %>?currentRoute=<%= encodeURIComponent(req.originalUrl) %>" method="post" style="display: inline;">
                                        <input type="submit" class="btn btn-primary" name="regular" value="&#43;" />
                                        <% if (item_in_mandarin !== "Á±≥È•≠") { %>
                                            <input type="submit" class="btn btn-warning" name="urgent" value="&#43;" />
                                        <% } %>
                                    </form>
                                    <!-- Delete Button -->
                                     <!-- Edit Button -->
                                    <button 
                                        type="button" 
                                        class="btn btn-secondary btn-sm" 
                                        style="position: absolute; bottom: 5px; left: 5px; padding: 2px 5px; font-size: 12px;" 
                                        onclick="openEditDialog('<%= remain_ingre %>', '<%= item_in_mandarin %>', '<%= item_in_german %>')"
                                    >‚úé</button>
                                    <form id="delete-form-<%= i %>" action="/delete/<%= remain_ingre %>" method="post" style="display: inline;">
                                        <button type="button" class="btn btn-danger btn-sm" style="position: absolute; bottom: 5px; right: 5px; padding: 2px 5px; font-size: 12px;"
                                            onclick="confirmDelete('<%= i %>')">‚ûñ</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    <% } }%>
                </div>
            </div>

            <div class="vertical-bar"></div>

            <div class="content-right">
                <div class="row row-cols-1 row-cols-md-2 g-0">
                    <% if (locals.shortage) { var shortage_list = Object.keys(shortage); for (var i = 0; i < shortage_list.length; i++) { var shortage_item = shortage_list[i]; const [item_in_mandarin, item_in_german] = shortage_item.split(" "); if (item_in_mandarin === "Á±≥È•≠") { const rice_quantity = shortage[shortage_item]; for (var j = 0; j < rice_quantity; j++) { %>
                            <div class="col">
                                <div id="<%=item_in_mandarin%>" class="card h-100">
                                    <div id="cover">
                                        <img src="https://dcf196gsozjg8.cloudfront.net/<%= item_in_mandarin %>.jpg" class="card-img-top" alt="<%=item_in_german%>">
                                    </div>
                                    <div class="card-body">
                                        <h6 class="card-title" style="font-style: italic;"><%= item_in_mandarin %></h6>
                                        <h6 class="card-title" style="font-style: italic;"><%= item_in_german %></h6>
                                        <form action="/shortage/<%=shortage_item%>" method="post" style="display: inline;">
                                            <input type="submit" class="btn btn-primary" value="&#8722;" />
                                        </form>
                                    </div>
                                </div>
                            </div> 
                    <% } } else { %>
                                <div class="col">
                                    <div id="<%=item_in_mandarin%>" class="card h-100">
                                        <div id="cover">
                                            <img src="https://dcf196gsozjg8.cloudfront.net/<%= item_in_mandarin %>.jpg" class="card-img-top" alt="<%=item_in_german%>">
                                        </div>
                                        <div class="card-body">
                                            <h6 class="card-title" style="font-style: italic;"><%= item_in_mandarin %></h6>
                                            <h6 class="card-title" style="font-style: italic;"><%= item_in_german %></h6>
                                            <form action="/shortage/<%=shortage_item%>" method="post" style="display: inline;">
                                                <input type="submit" class="btn btn-primary" value="&#8722;" />
                                            </form>
                                        </div>
                                    </div>
                                </div>
                                <script>
                                    var urgency = "<%=shortage[shortage_item]%>";
                                    if (urgency === "true") {
                                        document.getElementById("<%=item_in_mandarin%>").style.backgroundColor = "#ffc107";
                                    }
                                </script>
                    <% } } }%>
                </div>
            </div>
        </div>
        <!-- Edit Dialog Box -->
        <div id="edit-dialog-box" class="modal" tabindex="-1" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">Edit Ingredient</h5>
                        <button type="button" class="btn-close" onclick="closeEditDialog()"></button>
                    </div>
                    <div class="modal-body">
                        <form id="edit-form" action="#" method="post" enctype="multipart/form-data">
                            <!-- Text Input (disabled for editing) -->
                            <div class="mb-3">
                                <label for="edit-ingredient-name" class="form-label">Ingredient Name</label>
                                <input type="text" class="form-control" id="edit-ingredient-name" name="name" readonly>
                            </div>
                            <!-- Image Input -->
                            <div class="mb-3">
                                <label for="edit-file-input" class="form-label">Upload New Image</label>
                                <input type="file" class="form-control" id="edit-file-input" name="file" accept="image/*">
                            </div>
                            <!-- Category Selection -->
                            <div class="d-flex flex-wrap justify-content-between mb-3">
                                <button type="button" class="btn btn-outline-primary" onclick="setEditCategory('meat')">ü•© ËÇâ</button>
                                <button type="button" class="btn btn-outline-success" onclick="setEditCategory('veg')">ü•¨ ÈùíËèú</button>
                                <button type="button" class="btn btn-outline-secondary" onclick="setEditCategory('ball')">üç¢ ‰∏∏Â≠ê</button>
                                <button type="button" class="btn btn-outline-info" onclick="setEditCategory('seafood')">üêü Êµ∑È≤ú</button>
                                <button type="button" class="btn btn-outline-warning" onclick="setEditCategory('fungi')">üçÑ ËèåÁ±ª</button>
                                <button type="button" class="btn btn-outline-dark" onclick="setEditCategory('bean')">ü´ò Ë±ÜÂà∂ÂìÅ</button>
                                <button type="button" class="btn btn-outline-danger" onclick="setEditCategory('noodle')">üçú ‰∏ªÈ£ü</button>
                                <button type="button" class="btn btn-outline-danger" onclick="setEditCategory('sauce')">ü•£ Â∞èÊñô</button>
                            </div>
                            <!-- Submit Buttons -->
                            <div class="d-flex justify-content-between">
                                <button type="button" class="btn btn-outline-primary w-50 me-1" onclick="submitEditForm('meat')">Submit as ü•© Meat</button>
                                <button type="button" class="btn btn-outline-success w-50 ms-1" onclick="submitEditForm('veg')">Submit as ü•¨ Veg</button>
                            </div>
                            <!-- Hidden Input for Category -->
                            <input type="hidden" id="edit-category-input" name="category">
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <script>
            function openEditDialog(name, mandarin, german) {
                const dialog = document.getElementById('edit-dialog-box');
                dialog.style.display = 'block';

                // Prefill the form with the existing data
                document.getElementById('edit-ingredient-name').value = name;
                document.getElementById('edit-category-input').value = ''; // Reset category
                document.getElementById('edit-file-input').value = ''; // Reset file input

                // Set the form action to the edit route
                const form = document.getElementById('edit-form');
                form.action = `/edit/${name}`;
            }

            function closeEditDialog() {
                const dialog = document.getElementById('edit-dialog-box');
                dialog.style.display = 'none';
            }

            function setEditCategory(category) {
                const categoryInput = document.getElementById('edit-category-input');
                categoryInput.value = category;
                alert(`Category set to: ${category}`); // Optional feedback
            }

            function submitEditForm(prepSide) {
                const form = document.getElementById('edit-form');
                const input = document.createElement('input');
                input.type = 'hidden';
                input.name = 'prep_side';
                input.value = prepSide; // 'meat' or 'veg'
                form.appendChild(input);
                form.submit();
            }
            function confirmDelete(formId) {
                if (confirm("Are you sure you want to delete this item?")) {
                    document.getElementById(`delete-form-${formId}`).submit();
                }
            }
        </script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    </body>
</html>