<%-include("partials/header.ejs")%>

    <body>
        <div class="container">
            <div class="content-left">
                <div class="row row-cols-1 row-cols-md-6 g-0">
                    <% if (locals.remain) { for (var i = 0; i < remain.length; i++) { var remain_ingre = remain[i]; const [item_in_mandarin, item_in_german] = remain_ingre.split(" ");%>
                        <div class="col">
                            <div class="card h-100">
                                <div id="cover">
                                    <img src="/images/<%= item_in_mandarin %>.jpg" class="card-img-top" alt="<%= item_in_german%>">
                                </div>
                                <div class="card-body">
                                    <h6 class="card-title" style="font-style: italic;"><%= item_in_mandarin %></h6>
                                    <h6 class="card-title" style="font-style: italic;"><%= item_in_german %></h6>
                                    <form action="/remain/<%=remain_ingre%>" method="post" style="display: inline;">
                                        <input type="submit" class="btn btn-primary" name="regular" value="&#43;" />
                                        <input type="submit" class="btn btn-warning" name="urgent" value="&#43;" />
                                    </form>
                                </div>
                            </div>
                        </div>
                    <% } }%>
                </div>
            </div>

            <div class="vertical-bar"></div>

            <div class="content-right">
                <div class="row row-cols-1 row-cols-md-6 g-0">
                    <% if (locals.shortage) { var shortage_list = Object.keys(shortage); for (var i = 0; i < shortage_list.length; i++) { var shortage_item = shortage_list[i]; const [item_in_mandarin, item_in_german] = shortage_item.split(" "); %>
                        <div class="col">
                            <div id="<%=item_in_mandarin%>" class="card h-100">
                                <div id="cover">
                                    <img src="/images/<%= item_in_mandarin %>.jpg" class="card-img-top" alt="<%=item_in_german%>">
                                </div>
                                <div class="card-body">
                                    <h6 class="card-title" style="font-style: italic;"><%= item_in_mandarin %></h6>
                                    <h6 class="card-title" style="font-style: italic;"><%= item_in_german %></h6>
                                    <form action="/shortage/<%=shortage_item%>" method="post" style="display: inline;">
                                        <input type="submit" class="btn btn-primary" value="&#8722;" />
                                    </form>
                                </div>
                            </div>
                        </div>
                        <script>
                            var urgency = "<%=shortage[shortage_item]%>";
                            if (urgency === "true") {
                                document.getElementById("<%=item_in_mandarin%>").style.backgroundColor = "#ffc107";
                            }
                        </script>
                    <% } }%>
                </div>
            </div>
        </div>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    </body>
</html>